<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Location Text -->
        <TextView
            android:id="@+id/dining_location_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Location1"
            android:textSize="14sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Restaurant Name -->
        <TextView
            android:id="@+id/dining_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="RESTAURANT1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/dining_location_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Reservation Date and Time -->
        <TextView
            android:id="@+id/dining_reservation_date_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reservation: 10-10-2020 11:11"
            android:textSize="14sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/dining_name_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Website Text -->
        <TextView
            android:id="@+id/dining_website_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="www.restaurant1.com"
            android:textSize="14sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/dining_reservation_date_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="4dp" />

        <!-- Optional: Rating Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/dining_website_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp">

            <!-- Placeholder stars, replace with icons or drawable as needed -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ ★ ★ ★ ★"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>